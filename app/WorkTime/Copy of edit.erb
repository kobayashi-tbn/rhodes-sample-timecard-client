<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @worktime.work_date %></h1>
    <a href="<%= url_for :action => :show, :id => @worktime.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
    <a href="<%= url_for :action => :delete, :id => @worktime.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">
      Delete
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @worktime.object %>"/>

      <%#      
          <div data-role="fieldcontain">
            <label for="worktime[work_date]" class="fieldLabel">Work date</label>
            <input type="text" id="worktime[work_date]" name="worktime[work_date]" value="<%= @worktime.work_date %>" <%= placeholder( "Work date" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="worktime[start_time]" class="fieldLabel">Start time</label>
            <input type="text" id="worktime[start_time]" name="worktime[start_time]" value="<%= @worktime.start_time %>" <%= placeholder( "Start time" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="worktime[end_time]" class="fieldLabel">End time</label>
            <input type="text" id="worktime[end_time]" name="worktime[end_time]" value="<%= @worktime.end_time %>" <%= placeholder( "End time" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="worktime[note]" class="fieldLabel">Note</label>
            <input type="text" id="worktime[note]" name="worktime[note]" value="<%= @worktime.note %>" <%= placeholder( "Note" ) %> />
          </div>
      %>
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
