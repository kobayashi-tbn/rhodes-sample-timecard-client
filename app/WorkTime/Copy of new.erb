<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>New <%= @worktime.title %></h1>
    <a href="<%= url_for :action => :index %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :save %>">
      <input type="hidden" name="id" value="<%= @worktime.object %>"/>

      
          <div data-role="fieldcontain">
            <label for="worktime[work_date]" class="fieldLabel">Work date</label>
            <input type="text" id="worktime[work_date]" name="worktime[work_date]" readonly value="<%= $choosed['worktime[work_date]'] %>" 
              <%= placeholder("Work date") %> onClick="popupDateTimeAJPicker('1', 'Choose Date', 'worktime[work_date]');" />
          </div>
      
          <div data-role="fieldcontain">
            <label for="worktime[start_time]" class="fieldLabel">Start time</label>
            <input type="text" id="worktime[start_time]" name="worktime[start_time]" readonly value="<% $choosed['worktime[start_time]'] %>"
              <%= placeholder("Start time") %> onClick="popupDateTimeAJPicker('2', 'Choose Start Time', 'worktime[start_time]');" />
          </div>
      
          <div data-role="fieldcontain">
            <label for="worktime[end_time]" class="fieldLabel">End time</label>
            <input type="text" id="worktime[end_time]" name="worktime[end_time]" readonly value="<% $choosed['worktime[end_time]'] %>"
              <%= placeholder("End time") %> onClick="popupDateTimeAJPicker('2', 'Choose End Time', 'worktime[end_time]');" />
          </div>
      
          <div data-role="fieldcontain">
            <label for="worktime[note]" class="fieldLabel">Note</label>
            <input type="text" id="worktime[note]" name="worktime[note]" <%= placeholder("Note") %> />
          </div>
      

      <input type="submit" value="Create"/>
    </form>
                
<% unless System::get_property('platform') == 'Blackberry' %>
    <script type="text/javascript">

function setFieldValue(field, value) {
  <%# document.getElementById(field).value=value; %>
  var element = $("div.ui-page-active [id='" + field + "']")[0];
  element.value = value;
}

function popupDateTimeAJPicker(flag, title, field_key) {
  $.get('/app/WorkTime/popup', { flag: flag, title: title, field_key: field_key });
  return false;
}
            
      </script>
<% end %>

  </div>

</div>



