<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :show, :id => @worktime.object %>
    <h1>Edit <%= @worktime.work_date%></h1>
    <%= link_to "Delete", :action => :delete, :id => @worktime.object %>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @worktime.object %>"/>
      <table>
          
          <tr>
              <td class="itemLabel">Work date: </td>
              <td class="itemValue"><input type="text" name="worktime[work_date]" value="<%= @worktime.work_date %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Start time: </td>
              <td class="itemValue"><input type="text" name="worktime[start_time]" value="<%= @worktime.start_time %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">End time: </td>
              <td class="itemValue"><input type="text" name="worktime[end_time]" value="<%= @worktime.end_time %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Note: </td>
              <td class="itemValue"><input type="text" name="worktime[note]" value="<%= @worktime.note %>"/></td>
          </tr>
          
      </table>
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
