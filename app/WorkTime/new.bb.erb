<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :index %>
    <h1>New WorkTime</h1>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :create %>">
      <input type="hidden" name="id" value="<%= @worktime.object %>"/>
      <table>
          
            <tr>
                <td class="itemLabel">Work date: </td>
                <td class="itemValue"><input type="text" name="worktime[work_date]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Start time: </td>
                <td class="itemValue"><input type="text" name="worktime[start_time]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">End time: </td>
                <td class="itemValue"><input type="text" name="worktime[end_time]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Note: </td>
                <td class="itemValue"><input type="text" name="worktime[note]"/></td>
            </tr>
          
      </table>
      <input type="submit" value="Create"/>
    </form>
  </div>

</div>
