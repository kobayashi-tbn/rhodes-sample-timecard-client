<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>New <%= @worktime.title %></h1>
    <a href="<%= url_for :action => :index %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :save %>">
      <input type="hidden" name="id" value="<%= @worktime.object %>"/>

      <%= render :partial => 'form', :locals => { :worktime => @worktime } %>
      

      <input type="submit" value="Create"/>
    </form>
                
<% unless System::get_property('platform') == 'Blackberry' %>
    <script type="text/javascript">

function setFieldValue(field, value) {
  <%# document.getElementById(field).value=value; %>
  var element = $("div.ui-page-active [id='" + field + "']")[0];
  element.value = value;
}

function popupDateTimeAJPicker(flag, title, field_key) {
  $.get('/app/WorkTime/popup', { flag: flag, title: title, field_key: field_key });
  return false;
}
            
      </script>
<% end %>

  </div>

</div>



