<div data-role="page" data-add-back-btn="false">

  <div data-role="header" data-position="inline">
    <h1><%= @worktime.work_date %></h1>
    <a href="<%= url_for :action => :index %>" class="ui-btn-left" data-icon="arrow-l" data-direction="reverse">
      Back
    </a>
    <a href="<%= url_for :action => :edit, :id => @worktime.object %>" class="ui-btn-right" data-icon="star">
      Edit
    </a>
  </div>

  <div data-role="content">
    <ul data-role="listview">
      
          <li>
            <div class="itemLabel">WorkDate</div>
            <div class="itemValue"><%= @worktime.work_date %></div>
          </li>
      
          <li>
            <div class="itemLabel">StartTime</div>
            <div class="itemValue"><%= @worktime.start_time %></div>
          </li>
      
          <li>
            <div class="itemLabel">EndTime</div>
            <div class="itemValue"><%= @worktime.end_time %></div>
          </li>
      
          <li>
            <div class="itemLabel">Note</div>
            <div class="itemValue"><%= @worktime.note %></div>
          </li>
      
    </ul>
  </div>

</div>
